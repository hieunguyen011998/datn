<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="9"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_weight="4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_suachua">
    </ImageView>

    <EditText
        android:id="@+id/ActivityLoginShipper_edtPhone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="40dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nhập số điện thoại của bạn"
        android:inputType="phone" />

    <EditText
        android:id="@+id/ActivityLoginShipper_edtPass"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nhập mật khẩu "
        android:layout_marginHorizontal="20dp"
        android:inputType="textPersonName" />

    <CheckBox
        android:id="@+id/ActivityLoginShipper_cbMissPass"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="right|center_horizontal"
        android:layout_marginRight="20dp"
        android:layout_weight="0.5"
        android:textSize="16sp"
        android:textColor="#39393C"
        android:text="Nhớ mật khẩu" />

    <TextView
        android:id="@+id/ActivityginShipper_txtQuenPass"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="16sp"
        android:textColor="#39393C"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:text="Quên mật khẩu ?">

    </TextView>

    <Button
        android:id="@+id/ActivityLoginShipper_btnLogin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textColor="#FCFCFC"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/botron_button"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="Đăng nhập" />

    <TextView
        android:id="@+id/ActivityLoginShipper_txtRedirectRegister"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="#39393C"
        android:gravity="center_horizontal"
        android:text="Bạn chưa có tài khoản ? Đăng ký" />
</LinearLayout>