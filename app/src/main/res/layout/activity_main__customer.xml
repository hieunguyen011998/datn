<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="10">

<SearchView
    android:layout_weight="1"
    android:id="@+id/Activity_search"
    android:layout_width="match_parent"
    android:layout_height="0dp">
</SearchView>
    <FrameLayout
        android:id="@+id/ActivityMainCustomer_frameMainContent"
        android:layout_weight="8"
        android:layout_marginHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/id_ActivityMainCustomer_txtTittleSuaChua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sá»¯a chua">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ActivityMainCustomer_RecycleSuaChua"
                android:layout_width="match_parent"
                android:scrollbars="vertical"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/ActivityMainCustomer_bottomNaviViewMenu"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:itemTextColor="#35ABE0"
        android:background="#FAFAF6"
        app:menu="@menu/bottom_navigation">
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</LinearLayout>